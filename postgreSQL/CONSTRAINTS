---NOT NULL - KOMENDA SPRAWIAJĄCA ŻE KOLUMNA MUSI MIEĆ WARTOŚĆ

CREATE TABLE users (
    name TEXT NOT NULL,
    age INTEGER
);

***MOŻE WYSTĘPOWAĆ RAZEM Z DEFAULT

CREATE TABLE users (
    name TEXT NOT NULL DEFAULT 'Anonymous',
    age INTEGER DEFAULT 0 NOT NULL
);


---UNIQUE - KOMENDA SPRAWIAJĄCA ŻE WARTOŚCI W KOLUMNIE SĄ UNIKATOWE

CREATE TABLE users (
    email TEXT UNIQUE NOT NULL,
    name TEXT
);

---PRIMARY KEY - SPECJALNA KOLUMNA W TABELI, KTÓRA MUSI BYĆ WYJĄTKOWA DLA KAŻDEGO WIERSZA I NIE MOŻE BYĆ NULL, MOŻE BYĆ TYLKO JEDEN W TABELI

CREATE TABLE users (
    id INTEGER PRIMARY KEY,
    name TEXT,
    age INTEGER
);

---FOREIGN KEY - JEST KOLUMNĄ ALBO GRUPĄ KOLUMN W TABLI KTÓRA ODNOSI SIĘ DO INNEJ TABELI I ŁĄCZY Z NIĄ
--***REFERENCES - SŁUŻY DO ŁĄCZENIA TABEL 


CREATE TABLE users (
    id INTEGER PRIMARY KEY,
    name TEXT
);

CREATE TABLE videos (
    id INTEGER PRIMARY KEY,
    title TEXT,
    owner_id INTEGER REFERENCES users(id)
);

---COMPOSITE PRIMARY KEY - JEST TO PRIMARY KEY UTWORZONY Z KILKU KOLUMN

CREATE TABLE employees (
    department_id INTEGER,
    employee_id INTEGER,
    name TEXT,
    PRIMARY KEY (department_id, employee_id)
);

---CHECK - DODAJE WARUNEK DO KOLUMNY, KTÓRY MUSI BYĆ SPEŁNIONY PRZY WSTAWIANIU DANYCH

CREATE TABLE users (
    id INTEGER PRIMARY KEY,
    age INTEGER CHECK (age >= 18)
);

CREATE TABLE users (
    id INTEGER PRIMARY KEY,
    status TEXT CHECK (status IN ('active', 'inactive'))
);

